<section class="page-login height100">
  <aside class="col-md-12">
    <div class="login_right">
      <div class="top_register">
        <ul>
           <li class="dont">Already have an account?</li>
           <li>
              <%= link_to new_user_session_path do %>
                <%= button_tag "LOGIN", :class => "btn1" %>
              <% end %>
            </li>
        </ul>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'welcome'}) do |f| %>
        <div class="welcome_top">
           <h2>Get Started for free</h2>
           <p>Limited time offer. Grab it soon.</p>
        </div>
        <div class="forn_field">
           <div class="form-group form_g">
              <%= f.label :email, "EMAIL ADDRESS", class: "cus_label" %>
              <%= f.email_field :email, autofocus: true, required: true, value: "", id: "email", class: "form-control", placeholder: "johndoe@gmail.com", pattern: "[^\s]+" %>
           </div>
           <div class="form-group form_g">
              <%= f.label :password, "PASSWORD", class: "cus_label" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />    
              <%= f.password_field :password, autocomplete: "off", required: true, value: "", id: "password", autofocus: true, class: "form-control", placeholder: "************", pattern: "[^\s]+" %> 
           </div>
           <div class="form-group form_g">
              <%= f.label :password, "CONFIRM PASSWORD", class: "cus_label" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br /> 
              <%= f.password_field :password_confirmation, :required => true, autocomplete: "off", class: "form-control", :placeholder => "************", pattern: "[^\s]+" %>
           </div>
        </div>
        <div class="pas_st">
           <p>
           <div id="passwordStrengthDiv" class="is0"></div>
           </p>
        </div>
        <div class="sign_bt sign_bt1">
           <%= f.submit "SIGN UP", class: "btn2" %>
        </div>
      <% end %>
    </div>
  </aside>
</section>